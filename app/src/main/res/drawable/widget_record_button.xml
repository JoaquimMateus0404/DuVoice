<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra exterior -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20F44336" />
        </shape>
    </item>

    <!-- CÃ­rculo principal com gradiente -->
    <item
        android:bottom="2dp"
        android:left="2dp"
