<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DuVoice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
    </style>

    <style name="Theme.DuVoice" parent="Base.Theme.DuVoice" />

    <!-- Splash Screen Theme -->
    <style name="Theme.DuVoice.Splash" parent="Theme.SplashScreen">
        <!-- Cor de fundo da splash screen -->
        <item name="windowSplashScreenBackground">@color/primary</item>
        <!-- Ícone animado no centro -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Cor do ícone para Android 12+ -->
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>
        <!-- Tema para depois da splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.DuVoice</item>
    </style>
</resources>